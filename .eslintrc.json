{
    "extends": "airbnb",
    "rules": {
        "consistent-return": "off",
        "new-cap": "off",
        "import/named": "off",
        "no-console": "off",
        "no-param-reassign": [
            "error",
            {
                "props": true,
                "ignorePropertyModificationsFor": [
                    "user",
                    "req"
                ]
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "prefer-destructuring": [
            "error",
            {
                "VariableDeclarator": {
                    "array": false,
                    "object": false
                }
            }
        ]
    },
    "globals": {
        "describe": true,
        "it": true,
        "app": true,
        "after": true,
        "done": true,
        "expect": true,
        "request": true,
        "beforeEach": true
    }
}